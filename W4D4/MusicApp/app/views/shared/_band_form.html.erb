<% method_verb = band.persisted? ? "PATCH" : "POST" %>

<form action="<%= bands_url  %>" method="POST">
  <input type="hidden" name="_method" value="<%= method_verb %>">
  <%= auth_token %>

  <label for="name">Name:</label>
  <input type="text" name="band[name]" id="name" placeholder="Name">

  <input type="submit" value="Submit">
</form>
