<% method_verb = album.persisted? ? "PATCH" : "POST" %>

<form action="<%= albums_url  %>" method="POST">
  <input type="hidden" name="_method" value="<%= method_verb %>">
  <%= auth_token %>

  <label for="title">Title:</label>
  <input type="text" name="album[title]" id="title" placeholder="Title">
  <br>

  <label for="title">Band:</label>
  <select name="album[band_id]">
    <% Band.all.each do |band| %>
    <option value="<%= band.id %>" <%= album.band_id == band.id ? 'selected' : '' %>><%= band.name %></option>
    <% end %>
  </select>
  <br>


  <label for="live">Live:</label>
  <input type="radio" name="album[album_type]" value="live" id="live" <%= album.album_type == "live" ? 'checked' : '' %>>
  <br>

  <label for="studio">Studio:</label>
  <input type="radio" name="album[album_type]" value="studio" id="studio" <%= album.album_type == "studio" ? 'checked' : '' %>>
  <br>

  <input type="submit" value="Submit">
</form>
