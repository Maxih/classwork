<% method_verb = track.persisted? ? "PATCH" : "POST" %>

<form action="<%= tracks_url  %>" method="POST">
  <input type="hidden" name="_method" value="<%= method_verb %>">
  <%= auth_token %>

  <label for="title">Title:</label>
  <input type="text" name="track[title]" id="title" placeholder="Title">
  <br>

  <label for="title">Album:</label>
  <select name="track[album_id]">
    <% Album.all.each do |album| %>
    <option value="<%= album.id %>" <%= track.album_id == album.id ? 'selected' : '' %>><%= album.title %></option>
    <% end %>
  </select>
  <br>

  <label for="title">Lyrics:</label>
  <textarea name="track[lyrics]"></textarea>
  <br>

  <label for="regular">Regular:</label>
  <input type="radio" name="track[track_type]" value="regular" id="regular" <%= track.track_type == "regular" ? 'checked' : '' %>>
  <br>

  <label for="bonus">Bonus:</label>
  <input type="radio" name="track[track_type]" value="bonus" id="bonus" <%= track.track_type == "bonus" ? 'checked' : '' %>>
  <br>

  <input type="submit" value="Submit">
</form>
