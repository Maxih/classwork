<h1>Viewing album <%= @album.title %></h1>
<h2>By: <a href="<%= band_url(@album.band.id) %>"><%= @album.band.name %></a></h2>

<a href="<%= new_album_track_url(@album.id) %>">Add track to this album</a>

<ul>
<% @album.tracks.each do |track| %>
  <li><a href="<%= track_url(track.id) %>"><%= track.title %></a></li>
<% end %>
</ul>

<form action="<%= album_url(@album.id) %>" method="POST">
  <%= auth_token %>
  <input type="hidden" name="_method" value="DELETE" >
  <button>Delete this album</button>
</form>
